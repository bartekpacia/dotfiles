Include ~/.ssh/config_*

# Easily and securely add configs from 1Password:
# $ op get document 'config_home' > ~/.ssh/config_home

Host github.com
	HostName github.com
	User git
	IdentityFile ~/.ssh/id_ed25519_github

Host *
	IgnoreUnknown UseKeychain
	ServerAliveInterval 5
	StrictHostKeyChecking ask
	AddKeysToAgent yes
	
	# only on macOS
	UseKeychain yes
