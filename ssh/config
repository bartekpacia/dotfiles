Include ~/.ssh/config_*

# Easily and securely add configs from 1Password:
# $ op get document 'config_home' > ~/.ssh/config_home

Host github.com
	HostName github.com
	User git
	IdentityFile ~/.ssh/id_ed25519_github

Host bitbucket.org
	HostName bitbucket.org
	IdentityFile ~/.ssh/id_ed25519_bitbucket_lc

Host *
	IgnoreUnknown UseKeychain
	ServerAliveInterval 5
	StrictHostKeyChecking ask
	AddKeysToAgent yes
	IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
	
	# only on macOS
	UseKeychain yes
