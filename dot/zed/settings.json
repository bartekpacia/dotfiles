{
  "ssh_connections": [
    {
      "host": "pacia.tech",
      "username": "charlie",
      "args": [],
      "projects": [
        {
          "paths": ["/etc/nginx"],
        },
      ],
    },
  ],
  "show_edit_predictions": false,
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "model_parameters": []
  },
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": ["**/*.txt", "**/*.md"]
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "base_keymap": "JetBrains",
  "buffer_font_family": "JetBrains Mono",
  "ui_font_family": "JetBrains Mono",
  "show_whitespaces": "none",
  "ui_font_size": 18,
  "buffer_font_size": 14,
  "line_indicator_format": "short",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": true,
    "sort_mode": "mixed"
    // TODO: add sort_mode https://github.com/zed-industries/zed/pull/40160
  },
  "preview_tabs": {
    "enabled": false
  },
  "terminal": {
    "font_size": 14,
    "blinking": "on",
    "copy_on_select": true
  },
  "languages": {
    "JSONC": {
      "show_edit_predictions": false
    },
    "Plain Text": {
      "show_edit_predictions": false
    },
    "Markdown": {
      "show_edit_predictions": false
    },
    "JavaScript": {},
    "HTML": {
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    }
    // "Dart": {
    //   "tab_size": 2
    // },
  }
}
