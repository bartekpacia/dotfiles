#!/bin/bash

size=64x64

resized_dir="$pwd/RESIZED"
if [ ! -d $resized_dir ]; then
  echo "Directory $resized_dir doesn't exist. Creating it now..."
  mkdir $resized_dir
  echo "Directory $resized_dir created."
fi

for i in *; do
  output=$(~/imagesize $i)
  
  if [[ $output == *"512x512"* ]]; then
    if [[ $output == *".png"* ]]; then
      mogrify -path resized -thumbnail $size $i
      echo "Successfully resized $i"
    fi
  fi
done
